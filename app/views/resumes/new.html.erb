


<div class="col-md-8 col-centered">
  <div class="panel panel-success">
    <div class="panel-body">
      <h3>提交简历到 <%= @job.title %></h3>
    </div>
    <div class="panel-footer">
      <hr>
      <%= simple_form_for [@job, @resume] do |f| %>
        <%= f.input :content %>
        <%= f.input :attachment %>

        <%= f.submit "提交", class:"btn btn-danger"%>

      <% end %>
      </div>
    </div>
  </div>
</div>
