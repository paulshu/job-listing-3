<div class="dropdown clearfix pull-right">
  <button class="btn btn-success dropdown-toggle" type="button" id="dropdownMenuDivider" data-toggle="dropdown" aria-haspopup="true" aria-expanded="true" >
    排 序
      <span class="caret"></span>
  </button>
  <ul class="dropdown-menu" aria-labelledby="dropdownMenuDivider">
    <li>
      <%= link_to("按薪资下限排序", admin_jobs_path(:order => "by_lower_bound")) %>
    </li>
    <li>
      <%= link_to("按薪资上限排序", admin_jobs_path(:order => "by_upper_bound")) %>
    </li>
    <li>
      <%= link_to("按照发布时间排序", admin_jobs_path) %>
    </li>
  </ul>
</div>
<div class="pull-right">
  <%= link_to("添加工作", new_admin_job_path, :class => "btn btn-info" ) %> &nbsp  <!-- 如设置new_admin_job_path路径则会检查用户是否为管理员  &nbsp插入一个空格-->
</div>

<table class="table table-boldered table-striped custab">
  <thead>
    <tr>
      <td>职缺</td>
      <td>收到简历数量</td>
      <td>薪资下限</td>
      <td>薪资上限</td>
      <td>管理选项</td>
      <td>发布时间</td>
    </tr>
  </thead>
  <tbody>
    <% @jobs.each do |job| %>
    <tr>
      <td>
        <%= render_job_status(job) %>
        <%= link_to(job.title, admin_job_path(job)) %>
      </td>
      <td> <%= link_to(job.resumes.count, admin_job_resumes_path(job)) %></td>
      <td>
        <%= job.wage_lower_bound %>
      </td>
      <td>
        <%= job.wage_upper_bound %>
      </td>
      <td>
        <%= link_to("Edit", edit_admin_job_path(job), :class => "btn btn-xs btn-info") %>
        <%= link_to("Destroy", admin_job_path(job), :method => :delete, :class => "btn btn-xs btn-danger", :data => { :confirm => "Are you sure?" }) %>

        <% if job.is_hidden %>
          <%= link_to("Publish", publish_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-success") %>
        <% else %>
          <%= link_to("Hide", hide_admin_job_path(job), :method => :post, :class => "btn btn-xs btn-warning") %>
        <% end %>
      </td>
      <td>
        <%= job.created_at %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<div class="text-center">
  <%= will_paginate @jobs %>
</div>
