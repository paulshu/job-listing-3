<div class="page-header text-right">
  <h5>
    <% if current_user && current_user.is_favorite_of?(@job) %>
      <%= link_to("取消收藏", unfavorite_job_path(@job), method: :post, class:"fa fa-heart" )%> &nbsp
    <% else %>
      <%= link_to("收藏", favorites_job_path(@job), method: :post, class:"fa fa-heart-o" ) %> &nbsp
    <% end %>
    <%= link_to(content_tag(:i, " 返回", class: "fa fa-arrow-left"), admin_jobs_path) %>
  </h5>
</div>
</div>
<br/><br/><br/>
<div class="col-md-8 col-centered">
  <div class="panel panel-info">
    <div class="panel-heading text-center">
      <h2> <%= @job.title %></h2>
    </div>
    <div class="panel-footer text-left">
      <p>
        <%= simple_format(@job.description) %>
      </p>
      <div class="text-center">
        <br/>
        <%= link_to("申请职位", new_job_resume_path(@job),  class:"btn btn-danger btn-lg") %>
      </div>
    </div>
  </div>
</div>
